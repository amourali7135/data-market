<section>

<div class="dashboard_container">

<div class="row align-items-center justify-content-center mt-3">
  <div class="row">
    <h5><strong><%="Your buyer profile has #{@buyer.hits} views so far!" %></strong></h5>
  </div>
</div>

<div class="row align-items-center justify-content-center mt-3">
  <div class="row">
    <p>Edit your buyer profile  <%= link_to 'Edit', edit_buyer_path(@buyer.id), class: 'btn btn-primary'  %>   </p>
  </div>
</div>

<div class="row align-items-center justify-content-center ">
  <div class="row">
    <p>See your buyer profile  <%= link_to 'See', buyer_path(@buyer.id), class: 'btn btn-primary'  %>   </p>
  </div>
</div>

<div class="row align-items-center justify-content-center">
  <div class="row">
    <p>Change your username or password  <%= link_to 'Change', edit_user_registration_path(@current_user.id), class: 'btn btn-primary'  %>   </p>
  </div>
</div>



<div class="row align-items-center justify-content-center">
  <div class="row">
<%# <p> See your conversations! <%= link_to 'Convos', conversation_path(@user), class: 'btn btn-primary' %>
    <p> See your conversations! <%= link_to 'Convos', conversations_path, class: 'btn btn-primary' %> </p>
  </div>
</div>

<div class="row align-items-center justify-content-center">
  <div class="row">
    <p>Make a new inquiry  <%= link_to 'New Inquiry', new_buyer_inquiry_path(@buyer.id), class: 'btn btn-primary'  %>   </p>
  </div>
</div>

  <div class="row align-items-center justify-content-center">
    <div class="row">
      <p> See your inquiries page! <%= link_to 'Your Inquiries', buyer_inquiries_path(@buyer.id), class: 'btn btn-primary' %> </p>
    </div>
  </div>




<div class="dashboard_container mt-4 mb-4">
  <p class="grid-headers">Edit or delete your inquiries below</p>
    <div class="row align-items-center justify-content-center">
      <div class="container front-page-grid">
        <% @buyer.inquiries.each do |inquiry| %>
          <div class="row ">
            <div class="products pl-5 card-grid-3c">
              <%= render partial: 'shared/inquiry_dashboard_card', locals: {inquiry: inquiry, buyer: inquiry.buyer} %>
            </div>
              <% end %>
          </div>
      </div>
    </div>
</div>
</div>


</div>

</section>
